{
  "manifest_version": 3,
  "name": "typescope",
  "version": "0.1.0",
  "description": "Scan typography styles from any webpage",
  "action": {
    "default_title": "TypScope",
    "default_popup": "popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["contentScript.js"],
      "run_at": "document_idle"
    }
  ],
  "background": {
    "service_worker": "background.js"
  }
}
